{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "postId": {
      "type": "integer",
      "minimum": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "body": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["id", "postId", "name", "email", "body"],
  "additionalProperties": false
}
